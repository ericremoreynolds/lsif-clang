{
    "name": "lsif-clang ubuntu 20.04",
    "dockerFile": "Dockerfile",
    "settings": {
        "[cpp]": {
            "editor.tabSize": 2,
            "editor.insertSpaces": true
        },
        // preference :) change if undesired
        "terminal.integrated.shell.linux": "/usr/bin/fish"
    },
    // recommended extensions, configure as you wish
    "extensions": [
        "ms-vscode.cpptools",
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-vscode.cmake-tools",
        "vadimcn.vscode-lldb",
        "buster.ndjson-colorizer", // for highlighting dump.lsif files
        "wayou.vscode-todo-highlight",
        "eamodio.gitlens",
        "twxs.cmake",
        "bazelbuild.vscode-bazel", // make life a bit nicer if working with bazel repos
        "ms-azuretools.vscode-docker"
    ],
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
    "workspaceFolder": "/workspace"
}